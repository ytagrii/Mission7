@page "/admin/books/details/{id:long}"

@*THIS PAGE DISPLAYS THE DETAILS FOR A BOOK*@
<h3 class="bg-info text-center text-white p-1">Details Page</h3>
<br />
<table class="table table-striped table-sm table-bordered">
    <tbody>
        <tr>
            <th>Book ID: </th>
            <td>@book.BookId</td>
        </tr>
        <tr>
            <th>Title:</th>
            <td>@book.Title</td>
        </tr>
        <tr>
            <th>ISBN: </th>
            <td>@book.Isbn</td>
        </tr>
        <tr>
            <th>Author: </th>
            <td>@book.Author</td>
        </tr>
        <tr>
            <th>Category: </th>
            <td>@book.Category</td>
        </tr>

        <tr>
            <th>Classification: </th>
            <td>@book.Classification</td>
        </tr>

        <tr>
            <th>Page Count:</th>
            <td>@book.PageCount</td>
        </tr>

        <tr>
            <th>Price:</th>
            <td>@book.Price</td>
        </tr>

        <tr>
            <th>Publisher:</th>
            <td>@book.Publisher</td>
        </tr>

    </tbody>
</table>

<NavLink class="btn btn-warning btn-sm" href="@EditUrl()">Edit</NavLink>
<NavLink class="btn btn-secondary btn-sm" href="/admin/books">Back</NavLink>

@code {

    [Inject]
    public IBookstoreRepository repo { get; set; }

    [Parameter]
    public long id { get; set; }

    public Book book { get; set; }

    protected override void OnParametersSet()
    {
        book = repo.Books.FirstOrDefault(x => x.BookId == id);
    }

    public string EditUrl() => $"/admin/books/edit/{book.BookId}";
}
